{
  "compilerOptions": {
    "target": "ES2020",                       // Modern JS output, compatible with Node.js 14+
    "module": "CommonJS",                     // Module system used by Node.js (use ESNext if using ESM)
    "moduleResolution": "node",               // Use Node.js module resolution
    "baseUrl": ".",                           // Base directory for module resolution
    "outDir": "dist",                         // Output directory for compiled files
    "rootDir": "src",                         // Root directory of source TypeScript files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing across the project
    "skipLibCheck": true,                     // Skip type checking of declaration files for faster builds
    "noEmitOnError": true,                    // Prevent output if there are any type errors
    "noUnusedLocals": true,                   // Report unused local variables
    "noUnusedParameters": true,               // Report unused function parameters
    "noImplicitReturns": true,                // Ensure all code paths in functions return a value
    "removeComments": true,                   // Strip out all comments in the emitted JS
    "declaration": false                      // Do not generate .d.ts declaration files
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
